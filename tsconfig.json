{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "types": ["vite/client"]
  },
  "rootDir": "./src",
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
